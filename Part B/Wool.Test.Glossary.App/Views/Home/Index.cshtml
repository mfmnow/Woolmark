@{
    ViewData["Title"] = "Home Page";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light margin-b-5">
    <a class="navbar-brand" href="#">Glossary Term Manager</a>
</nav>

<div class="row">
    <div class="col-md-12">
        <button onclick="Wool.GlossaryTermLib.ShowTermForm();" class="btn btn-success float-right margin-10">Add new term</button>
    </div>
    <div class="col-md-12">
        <div id="GlossaryTermLibsList" class="list-group"></div>
    </div>
    <div class="col-xs-12">
        <ul id="Pagination" class="pagination"></ul>
    </div>
</div>

<div class="row">
    <div class="col">
        &nbsp;
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="termModal" tabindex="-1" role="dialog" aria-labelledby="termModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="termModalLabel">Save Term</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" class="form-item" id="Id">
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Term:</label>
                    <input type="text" class="form-control form-item" id="Term">
                </div>
                <div class="form-group">
                    <label for="message-text" class="col-form-label">Definition:</label>
                    <textarea class="form-control form-item" id="Definition"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary form-item" data-dismiss="modal">Close</button>
                <button type="button" onclick="Wool.GlossaryTermLib.SaveGlossaryTerm();" class="btn btn-primary form-item form-save">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- delTermModal Modal -->
<div class="modal fade" id="delTermModal" tabindex="-1" role="dialog" aria-labelledby="termModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="termModalLabel">Delete Term</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="del-Index">
                Are you sure you want to delete <span id="del-term"></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary form-item" data-dismiss="modal">Close</button>
                <button type="button" onclick="Wool.GlossaryTermLib.DeleteGlossaryTerm();" class="btn btn-danger form-item form-delete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/js/MFM.Wool.GlossaryTermLib.js"></script>
    <script>
        Wool.GlossaryTermLib.LoadGlossaryTermLibs();
    </script>
}